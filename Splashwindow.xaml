<Window x:Class="assignment4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:assignment4"
        mc:Ignorable="d"
        Title="Expense Tracker" 
        Height="500" Width="450"
        ResizeMode="NoResize">
    <Grid Background="BurlyWood" >
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Label Content="Expense tracker"  HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontSize="30"></Label>
        <Grid Grid.Row="1" >
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="5*"></RowDefinition>
            </Grid.RowDefinitions>
            <Label Content="Accounts: please choose your account" FontWeight="Bold" Grid.Row="0"/>
            <DataGrid  Grid.Row="1" IsReadOnly="True" Margin="5" Name="accountBox" AutoGeneratedColumns="GenerateAccountColumns" />
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Row="0" Grid.Column="0" Margin="5">
                <Label Content="User Name"></Label>
                <TextBox Height="50" Name="username"></TextBox>
            </StackPanel>
            <Button  Content="Add User" Grid.Column="1" Margin="10" Height="50" Click="AddUser" ></Button>
        </Grid>
    </Grid>
</Window>
